<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ChargersFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   <TextView
       android:id="@+id/selectOneTxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Please Select One"
       android:textSize="12sp"
       android:textColor="@color/black"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/border">

            <RadioButton
                android:id="@+id/pointA"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/aPointTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pointA"
                android:drawableStart="@drawable/baseline_local_gas_station_24"
                android:drawablePadding="5dp"
                android:text="A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC-Moderate- 15kW- GB/T"
                android:textSize="12sp"
                android:layout_below="@id/aPointTxt"
                android:layout_toRightOf="@id/pointA"/>

            <Button
                android:id="@+id/availableBtn"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Available"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2/unit"
                android:textSize="12sp"
                android:layout_below="@id/availableBtn"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RadioGroup>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/border">

            <RadioButton
                android:id="@+id/pointB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/bPointTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/baseline_local_gas_station_24"
                android:layout_toRightOf="@id/pointB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC-Fast- 30kW- css II"
                android:textSize="12sp"
                android:layout_below="@id/bPointTxt"
                android:layout_toRightOf="@id/pointB"/>

            <Button
                android:id="@+id/availableBtn1"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Unavailable"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/yellow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2/unit"
                android:textSize="12sp"
                android:layout_below="@id/availableBtn1"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/border">

            <RadioButton
                android:id="@+id/pointC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/cPointTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/baseline_local_gas_station_24"
                android:layout_toRightOf="@id/pointC"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC-Slow- 3.3kW- GB/T"
                android:textSize="12sp"
                android:layout_below="@id/cPointTxt"
                android:layout_toRightOf="@id/pointC"/>

            <Button
                android:id="@+id/availableBtn2"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Unavailable"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/yellow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2/unit"
                android:textSize="12sp"
                android:layout_below="@id/availableBtn2"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/border">

            <RadioButton
                android:id="@+id/pointD"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/dPointTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/baseline_local_gas_station_24"
                android:layout_toRightOf="@id/pointD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC-Fast- 30kW- GB/T"
                android:textSize="12sp"
                android:layout_below="@id/dPointTxt"
                android:layout_toRightOf="@id/pointD"/>

            <Button
                android:id="@+id/availableBtn3"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Unavailable"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/yellow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2/unit"
                android:textSize="12sp"
                android:layout_below="@id/availableBtn3"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RadioGroup>
    </LinearLayout>
</ScrollView>