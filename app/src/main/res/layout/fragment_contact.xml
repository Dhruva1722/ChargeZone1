<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ContactFragment">


    <TextView
        android:id="@+id/messageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Us"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/messageEdt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Message"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@id/messageTxt"
        android:background="@drawable/border"/>

    <ImageView
        android:id="@+id/sendBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/send"
        android:layout_below="@id/messageEdt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+19 1029384756"
        android:drawableStart="@drawable/baseline_local_phone_24"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:autoLink="phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/rectangle_card1"
        android:layout_below="@id/sendBtn"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/whatsapp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"/>


</RelativeLayout>